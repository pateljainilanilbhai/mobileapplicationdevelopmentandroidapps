<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <!-- Enabled Checkbox -->
    <CheckBox 
        android:id="@+id/checkbox_row_comparator_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:focusable="false"
        android:clickable="false" />
    
    <!-- Down Image -->
    <ImageView
    	android:id="@+id/image_row_comparator_down"
    	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_alignParentRight="true"
    	android:layout_margin="4dp"
    	android:layout_centerInParent="true"
    	android:contentDescription="@string/image_down"
    	android:clickable="true" />
    
    <!-- Up Image -->
    <ImageView
    	android:id="@+id/image_row_comparator_up"
    	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_toLeftOf="@id/image_row_comparator_down"
    	android:layout_margin="4dp"
    	android:layout_centerInParent="true"
    	android:contentDescription="@string/image_up"
    	android:clickable="true" />
    
    <!-- Comparator Name -->
    <TextView 
        android:id="@+id/text_row_comparator_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/checkbox_row_comparator_enabled"
        android:layout_toLeftOf="@id/image_row_comparator_up"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end" />

</RelativeLayout>