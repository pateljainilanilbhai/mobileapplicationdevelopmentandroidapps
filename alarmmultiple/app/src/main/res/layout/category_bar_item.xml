<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_category_bar_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="96dp">
    
    <View android:id="@+id/main_category_bar_item_color"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentTop="true" />
    
    <View android:id="@+id/main_category_bar_item_selection"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true" />
    
    <TextView
	    android:id="@+id/main_category_bar_item_name"
	    android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:layout_below="@id/main_category_bar_item_color"
	    android:layout_above="@id/main_category_bar_item_selection"
	    android:gravity="center"
	    android:textSize="16sp"
	    android:padding="4dp" />
    
</RelativeLayout>
